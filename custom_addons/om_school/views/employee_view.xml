<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="view_school_employee_tree" model="ir.ui.view">
        <field name="name">school.employee.tree</field>
        <field name="model">school.employee</field>
        <field name="arch" type="xml">
            <tree string="Employees">
                <field name="name"/>
                <field name="id_number" optional="show"/>
                <field name="phone_number" optional="hide"/>
                <field name="gender" optional="hide"/>
                  <field name="create_uid" optional="hide" groups="om_school.group_school_management"/>
                <field name="date_of_birth"/>
            </tree>
        </field>
    </record>
    <record id="view_school_employee_form" model="ir.ui.view">
        <field name="name">school.employee.form</field>
        <field name="model">school.employee</field>
        <field name="arch" type="xml">
            <form string="Employees">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="id_number"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="phone_number"/>
                            <field name="date_of_birth"/>
                            <field name="create_uid" groups="om_school.group_school_management"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_school_employee" model="ir.actions.act_window">
        <field name="name">Employee</field>
        <field name="res_model">school.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Student
            </p>
        </field>
    </record>
</odoo>