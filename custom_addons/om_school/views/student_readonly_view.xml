<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_student_readonly_tree" model="ir.ui.view">
        <field name="name">school.student.readonly.tree</field>
        <field name="model">school.student</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Students" create="0" delete="0" edit="0">
                <field name="reference" readonly="True"/>
                <field name="name"/>
                <field name="date_of_birth" optional="show"/>
                <field name="gender" optional="hide"/>
                <field name="guardian" optional="hide"/>
                <field name="tag_ids" optional="hide"/>
                <field name="subject" optional="hide"/>
                <field name="class_id" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_school_student_readonly_form" model="ir.ui.view">
        <field name="name">school.student.readonly.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Students" create="0" delete="0" edit="0">
                <sheet>
                    <group>
                        <group>
                             <field name="reference" readonly="True"/>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                            <field name="is_disabled"/>
                            <field name="description" invisible="not is_disabled" required="is_disabled"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="class_id"/>
                            <field name="guardian"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="subject" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="action_school_readonly_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[Command.clear(),
(0,0,{'view_mode' : 'tree','view_id':ref('view_school_student_readonly_tree')}),
(0,0,{'view_mode' : 'form','view_id':ref('view_school_student_readonly_form')})]"/>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Student
            </p>
        </field>
    </record>
</odoo>