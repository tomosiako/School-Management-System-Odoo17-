<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_guardian_tree" model="ir.ui.view">
        <field name="name">school.guardian.tree</field>
        <field name="model">school.guardian</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="id_number" optional="show"/>
                <field name="phone" optional="hide"/>
                <field name="gender" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_school_guardian_form" model="ir.ui.view">
        <field name="name">school.guardian.form</field>
        <field name="model">school.guardian</field>
        <field name="arch" type="xml">
            <form string="Guardians">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="id_number"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="phone"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="action_school_guardian" model="ir.actions.act_window">
        <field name="name">Guardian</field>
        <field name="res_model">school.guardian</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New student Guardian
            </p>
        </field>
    </record>
</odoo>