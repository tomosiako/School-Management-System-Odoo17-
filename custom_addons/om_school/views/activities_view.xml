<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_activity_tree" model="ir.ui.view">
        <field name="name">school.activity.tree</field>
        <field name="model">school.activity</field>
        <field name="arch" type="xml">
            <tree string="Activity">

                <field name="name"/>
                <field name="date" optional="show"/>
                <field name="description" optional="hide"/>
                <field name="start_time" optional="hide"/>
                <field name="end_time" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_school_activity_form" model="ir.ui.view">
        <field name="name">school.activity.form</field>
        <field name="model">school.activity</field>
        <field name="arch" type="xml">
            <form string="Activity">
                <sheet>
                    <group>
                        <group>

                            <field name="name"/>
                            <field name="date"/>
                            <field name="description"/>

                        </group>
                        <group>
                            <field name="start_time" optional="hide"/>
                            <field name="end_time" optional="hide"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>




    <record id="action_school_activity" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">school.activity</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Student
            </p>
        </field>
    </record>
</odoo>