<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_school_level" model="ir.ui.view">
        <field name="name">school.level.tree</field>
        <field name="model">school.level</field>
        <field name="arch" type="xml">
            <tree string="Class">
                <field name="name"/>
                <field name="code" optional="show"/>
              <field name="class_teacher"/>
            </tree>
        </field>
    </record>
    <record id="view_school_level_form" model="ir.ui.view">
        <field name="name">school.level.form</field>
        <field name="model">school.level</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="class_teacher"/>

                        </group>
                        <group>
                         <field name="code" optional="show"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>


    <record id="action_school_level" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">school.level</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Class
            </p>
        </field>
    </record>
</odoo>